<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeffryRaymond.rememberYou.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/welcomeUserContentMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:hint="@string/welcomeUser"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/rememberYouLogoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeUserContentMain"
        android:layout_marginStart="12dp"
        android:src="@drawable/remember_you_logo" />

    <ListView
        android:id="@+id/taskCategorylistCM"
        android:layout_below="@id/welcomeUserContentMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:layout_marginBottom="90dp"
        android:layout_below="@id/welcomeUserContentMain"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="69dp">


    </RelativeLayout>

    <Button
        android:id="@+id/addCategoryButtonContentMain"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/rounded_button"
        android:text="@string/addTask"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />

</RelativeLayout>
