<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="496dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_above="@id/design_bottom_sheet"
        android:paddingTop="62dp">

        <ListView
            android:id="@+id/taskCategorylistView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:choiceMode="singleChoice"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"></ListView>
    </RelativeLayout>

    <TextView
        android:id="@+id/msgTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/cabin_medium"
        android:hint="@string/noTasks"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageAddButton"
            android:layout_width="51dp"
            android:layout_height="78dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/add_button" />


        <ImageView
            android:id="@+id/imageEditButton"
            android:layout_width="51dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"

            android:src="@drawable/edit_button" />

        <ImageView
            android:id="@+id/imageAlarmButton"
            android:layout_width="51dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/alarm_button" />

        <ImageView
            android:id="@+id/imageHistoryButton"
            android:layout_width="51dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/history_button" />

        <ImageView
            android:id="@+id/imageCalenderButton"
            android:layout_width="51dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/calender_button" />

        <ImageView
            android:id="@+id/imageShareButton"
            android:layout_width="51dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/share_button" />

        <ImageView
            android:id="@+id/imageDeleteButton"
            android:layout_width="51dp"
            android:layout_height="75dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/delete_button" />

    </LinearLayout>

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolBarApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>
</RelativeLayout>